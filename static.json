{
  "root": "dist/pwa",
  "https_only": true,
  "proxies": {
    "/public/": {
      "origin": "https://backend-rough-snow-2736.fly.dev",
      "headers": { "Cache-Control": "no-store" }
    }
  },
  "headers": {
    "/*": { "Cache-Control": "no-cache, no-store, must-revalidate" },
    "/service-worker.js": { "Cache-Control": "no-cache, no-store, must-revalidate" },
    "/manifest.json": { "Content-Type": "application/manifest+json; charset=utf-8" },
    "/manifest.webmanifest": { "Content-Type": "application/manifest+json; charset=utf-8" },
    "/icons/*": { "Cache-Control": "public, max-age=31536000, immutable" },
    "/assets/*": { "Cache-Control": "public, max-age=31536000, immutable" }
  },
  "routes": {
    "/service-worker.js": "service-worker.js",
    "/manifest.json": "manifest.json",
    "/manifest.webmanifest": "manifest.webmanifest",
    "/*": "index.html"
  }
}
